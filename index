    <script>
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Set today's date as default
            document.getElementById('date').valueAsDate = new Date();
            
            // Load and display data
            updateStats();
            displayRecentComplaints();
        });

        // Generate unique code (Letter + 3 digits)
        function generateCode() {
            const letters = 'GRCMFST'; // Guest, Recovery, Complaint, McDonald's, Food, Service, Team
            const letter = letters[Math.floor(Math.random() * letters.length)];
            const numbers = Math.floor(100 + Math.random() * 900); // 100-999
            const code = letter + numbers;
            
            // Check if code already exists
            const complaints = getComplaints();
            if (complaints.some(c => c.code === code)) {
                return generateCode(); // Regenerate if duplicate
            }
            
            return code;
        }

        // Get complaints from localStorage
        function getComplaints() {
            return JSON.parse(localStorage.getItem('mcdComplaints') || '[]');
        }

        // Save complaints to localStorage
        function saveComplaints(complaints) {
            localStorage.setItem('mcdComplaints', JSON.stringify(complaints));
        }

        // Handle form submission
        document.getElementById('complaintForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const code = generateCode();
            const complaint = {
                code: code,
                date: document.getElementById('date').value,
                manager: document.getElementById('manager').value,
                guestName: document.getElementById('guestName').value,
                phone: document.getElementById('phone').value,
                complaint: document.getElementById('complaint').value,
                resolution: document.getElementById('resolution').value,
                status: 'active',
                createdAt: new Date().toISOString()
            };
            
            // Save to localStorage
            const complaints = getComplaints();
            complaints.unshift(complaint);
            saveComplaints(complaints);
            
            // Show generated code
            document.getElementById('generatedCode').textContent = code;
            document.getElementById('codeDisplay').classList.add('show');
            
            // Update UI
            updateStats();
            displayRecentComplaints();
            
            // Show success toast
            showToast('Complaint registered successfully!', 'success');
            
            // Reset form (except date and manager)
            document.getElementById('guestName').value = '';
            document.getElementById('phone').value = '';
            document.getElementById('complaint').value = '';
        });

        // Lookup code
        function lookupCode() {
            const code = document.getElementById('lookupCode').value.toUpperCase().trim();
            const resultCard = document.getElementById('resultCard');
            const resultStatus = document.getElementById('resultStatus');
            const resultDetails = document.getElementById('resultDetails');
            const actionButtons = document.getElementById('actionButtons');
            
            if (!code) {
                showToast('Please enter a code', 'error');
                return;
            }
            
            const complaints = getComplaints();
            const complaint = complaints.find(c => c.code === code);
            
            resultCard.classList.add('show');
            
            if (complaint) {
                resultCard.className = 'result-card show found';
                resultStatus.className = 'result-status found';
                resultStatus.textContent = '‚úì Code Found';
                
                const formattedDate = new Date(complaint.date).toLocaleDateString('en-US', {
                    weekday: 'short',
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });
                
                resultDetails.innerHTML = `
                    <div class="result-item">
                        <span class="result-label">Code:</span>
                        <span class="result-value" style="font-weight: 600; color: var(--mcd-red);">${complaint.code}</span>
                    </div>
                    <div class="result-item">
                        <span class="result-label">Date:</span>
                        <span class="result-value">${formattedDate}</span>
                    </div>
                    <div class="result-item">
                        <span class="result-label">Guest:</span>
                        <span class="result-value">${complaint.guestName}</span>
                    </div>
                    <div class="result-item">
                        <span class="result-label">Phone:</span>
                        <span class="result-value">${complaint.phone}</span>
                    </div>
                    <div class="result-item">
                        <span class="result-label">Manager:</span>
                        <span class="result-value">${complaint.manager}</span>
                    </div>
                    <div class="result-item">
                        <span class="result-label">Complaint:</span>
                        <span class="result-value">${complaint.complaint}</span>
                    </div>
                    <div class="result-item">
                        <span class="result-label">Resolution:</span>
                        <span class="result-value" style="font-weight: 600; color: var(--success);">${complaint.resolution}</span>
                    </div>
                    <div class="result-item">
                        <span class="result-label">Status:</span>
                        <span class="result-value">
                            <span class="status-badge ${complaint.status === 'active' ? 'status-active' : 'status-redeemed'}">
                                ${complaint.status === 'active' ? 'Active' : 'Redeemed'}
                            </span>
                        </span>
                    </div>
                `;
                
                if (complaint.status === 'active') {
                    actionButtons.innerHTML = `
                        <button class="btn-action btn-redeem" onclick="redeemCode('${complaint.code}')">‚úì Mark as Redeemed</button>
                        <button class="btn-action btn-delete" onclick="deleteCode('${complaint.code}')">üóë Delete</button>
                    `;
                } else {
                    actionButtons.innerHTML = `
                        <button class="btn-action btn-delete" onclick="deleteCode('${complaint.code}')">üóë Delete Entry</button>
                    `;
                }
            } else {
                resultCard.className = 'result-card show not-found';
                resultStatus.className = 'result-status not-found';
                resultStatus.textContent = '‚úó Code Not Found';
                resultDetails.innerHTML = '<p>No complaint found with this code. Please check the code and try again.</p>';
                actionButtons.innerHTML = '';
            }
        }

        // Redeem code
        function redeemCode(code) {
            const complaints = getComplaints();
            const index = complaints.findIndex(c => c.code === code);
            
            if (index !== -1) {
                complaints[index].status = 'redeemed';
                complaints[index].redeemedAt = new Date().toISOString();
                saveComplaints(complaints);
                
                showToast('Code marked as redeemed!', 'success');
                lookupCode(); // Refresh display
                updateStats();
                displayRecentComplaints();
            }
        }

        // Delete code
        function deleteCode(code) {
            if (confirm('Are you sure you want to delete this entry?')) {
                const complaints = getComplaints();
                const filtered = complaints.filter(c => c.code !== code);
                saveComplaints(filtered);
                
                showToast('Entry deleted', 'success');
                document.getElementById('resultCard').classList.remove('show');
                document.getElementById('lookupCode').value = '';
                updateStats();
                displayRecentComplaints();
            }
        }

        // Copy code to clipboard
        function copyCode() {
            const code = document.getElementById('generatedCode').textContent;
            navigator.clipboard.writeText(code).then(() => {
                showToast('Code copied to clipboard!', 'success');
            });
        }

        // Update statistics
        function updateStats() {
            const complaints = getComplaints();
            const today = new Date().toISOString().split('T')[0];
            
            document.getElementById('totalComplaints').textContent = complaints.length;
            document.getElementById('activeComplaints').textContent = complaints.filter(c => c.status === 'active').length;
            document.getElementById('redeemedComplaints').textContent = complaints.filter(c => c.status === 'redeemed').length;
            document.getElementById('todayComplaints').textContent = complaints.filter(c => c.date === today).length;
        }

        // Display recent complaints
        function displayRecentComplaints() {
            const complaints = getComplaints();
            const tbody = document.getElementById('recentTableBody');
            const emptyState = document.getElementById('emptyState');
            const tableContainer = document.getElementById('recentTableContainer');
            
            if (complaints.length === 0) {
                tableContainer.style.display = 'none';
                emptyState.style.display = 'block';
                return;
            }
            
            tableContainer.style.display = 'block';
            emptyState.style.display = 'none';
            
            // Show last 10 complaints
            const recent = complaints.slice(0, 10);
            
            tbody.innerHTML = recent.map(c => {
                const formattedDate = new Date(c.date).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric'
                });
                
                return `
                    <tr>
                        <td class="table-code">${c.code}</td>
                        <td>${formattedDate}</td>
                        <td>${c.guestName}</td>
                        <td>${c.manager}</td>
                        <td>${c.resolution}</td>
                        <td>
                            <span class="status-badge ${c.status === 'active' ? 'status-active' : 'status-redeemed'}">
                                ${c.status === 'active' ? 'Active' : 'Redeemed'}
                            </span>
                        </td>
                    </tr>
                `;
            }).join('');
        }

        // Show toast notification
        function showToast(message, type = 'info') {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            
            toastMessage.textContent = message;
            toast.className = `toast show ${type}`;
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Allow Enter key to trigger lookup
        document.getElementById('lookupCode').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                lookupCode();
            }
        });
    </script>
</body>
</html>
